<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Question">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/question_country"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:text="Country"
            android:textAppearance="@style/TextAppearance.AppCompat.Display3" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="... is located in..." />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <RadioButton
                android:id="@+id/question_answer_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continent 1" />

            <RadioButton
                android:id="@+id/question_answer_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continent 2" />

            <RadioButton
                android:id="@+id/question_answer_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Continent 3" />
        </RadioGroup>

    </LinearLayout>

</FrameLayout>